<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.usuario.PreferenciasActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_confunidad">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.298"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.185" />

        <TextView
            android:id="@+id/textPreferencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferencias de Usuario"
            android:textColor="@color/white.smoke"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/textSeriesDefaul"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/textSeriesDefaul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proxima_bold"
            android:text="Nros. de Serie por Default"
            android:textColor="@color/blue_grey_light"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textPreferencias"
            app:layout_constraintVertical_bias="0">
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="57dp"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/textSeriesDefaul"
            app:layout_constraintTop_toBottomOf="@+id/textSeriesDefaul"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent=".5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="CompaÃ±ia"
                android:textColor="@color/contentBadgeTitle"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCompania"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textSeriesDefaul"
                android:layout_alignRight="@id/textSeriesDefaul"
                android:layout_toRightOf="@id/textSeriesDefaul"
                android:background="@drawable/shape_rectangle_white"
                android:elevation="0dp"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:textColor="@color/black"
                android:textColorHint="@color/blue_grey_light"
                android:textSize="16.0sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Establecimiento"
                android:textColor="@color/contentBadgeTitle"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnEstablecimiento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spinner">
            </Spinner>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Nro. Serie Factura"
                android:textColor="@color/contentBadgeTitle"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnfacturas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spinner">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Nro. Serie Boleta"
                android:textColor="@color/contentBadgeTitle"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnboletas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spinner">
            </Spinner>

        </LinearLayout>


     <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabIcon"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:backgroundTint="@color/colorPrimary"
            android:rotation="180"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            app:srcCompat="@drawable/ic_arrow_back" />



          </androidx.constraintlayout.widget.ConstraintLayout>

      </LinearLayout>