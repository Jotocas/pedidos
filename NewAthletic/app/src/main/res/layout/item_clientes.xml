<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgArticle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="10dp"


        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/cvImage"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:text="PASCO RODRIGUEZ NICKER OSCAR"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TvFechaExamen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:text="Miercoles 09/04/19 - 11:00 a 12:00am"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TvFechaExamen"
                android:layout_marginLeft="30dp"
                android:text="70223123"
                android:textSize="11sp"
                android:fontFamily="@font/sf_protext_medium"
                android:textColor="#5d5d5e"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNomPaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle2"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/sf_protext_medium"
                android:text="Jr Guillermo Moore 588 - Santa Anita"
                android:textColor="#5d5d5e"
                android:textSize="11sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView

                android:visibility="gone"
                android:id="@+id/RcyShowHorario"
                android:layout_width="316dp"
                android:layout_height="41dp"
                android:layout_below="@+id/txtNomPaciente"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:textStyle="bold" />

            <Button

                android:id="@+id/BtnSelect"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/txtNomPaciente"
                android:layout_marginTop="8.0dip"

                android:background="@drawable/selector_btn_green"
                android:fontFamily="@font/proxima_nova_bold"
                android:textAllCaps="false"
                android:textColor="#fff" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
